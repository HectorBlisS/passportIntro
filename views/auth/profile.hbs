<style>
  body, html{
    margin: 0;
    padding: 0;
  }
.cover{
  background-image: url('https://www.eta.co.uk/wp-content/uploads/2012/09/Cycling-by-water-resized-min.jpg');
  background-size: cover;
  height: 200px;
  width: 100%;
  position: relative;
}

.cover img{
  width: 100px;
  height: 100px;
  border-radius: 50%;
  border: 5px solid white;
  position: absolute;
  bottom: -50px;
  left:50px;
}

.overlay{
  background-color: rgb(0,0,0);
  opacity: 0;
  width: 100px;
  height: 100px;
  position: absolute;
  bottom: -50px;
  left:50px;
  z-index: 1;
  border-radius: 50%;
  border: 5px solid transparent;
  transition:all .3s ease;
    cursor: pointer;
  text-transform: uppercase;
  color:white;
  text-align: center;
}

.overlay:hover{
  opacity: .5;
}

</style>
<div class="cover">

  {{#if photoURL}}
    <div class="overlay">
    <h3>Edit picture</h3>
  </div>
  <img src="{{photoURL}}" alt="">
  {{else}}
  <div class="overlay">
    <h3>Edit picture</h3>
  </div>
  <img src="https://www.gumtree.com/static/1/resources/assets/rwd/images/orphans/a37b37d99e7cef805f354d47.noimage_thumbnail.png" alt="">
  {{/if}}
</div>

  <form 
  action="/auth/profile" 
  method="post" 
  enctype="multipart/form-data"
  >
  <input name="photoURL" id="input" hidden type="file">
  </form>

<script>
  var input = document.getElementById('input')
  
  document.querySelector('.overlay')
  .addEventListener('click', (e)=>{
    input.click()
  })

  input.addEventListener('change', (e)=>{
    document.querySelector('form').submit()
  })

</script>